
############## Create own DECORATOR ################

import functools

def decorator(func):
    @functools.wraps(func)
    def wrapper_decorator(*arg,**kwarg):
        # Do something before
        print("Hello ....calling the function...")
        value=func(*arg,**kwarg)
        # Do something after
        print("Bye ....return value:",value)
        return value
    return wrapper_decorator


